<% layout('layouts/bolierplate') %>

<body>
  <div class="container mt-4">
    <h1 class="mb-4">All Listings</h1>

    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="col text-decoration-none text-dark">
          <div class="col">
            <div class="card h-100">
              
              <!-- Image wrapper with custom overlay -->
              <div class="card-img-wrapper position-relative">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
                <div class="card-img-overlay-custom">
                  <h5 class="m-0"></h5>
                </div>
              </div>

              <div class="card-body">
                <h5 class="card-title"><%= listing.title %></h5>
               <p class="card-text">
  &#8377;<%= listing.price ? listing.price.toLocaleString('en-IN') : 'N/A' %> / night
</p>

              </div>
            </div>
          </div>
        </a>
      <% } %>
    </div>

    <p class="mt-5">Welcome to WanderLust, your go-to platform for exploring the world's most beautiful destinations.</p>
  </div>
</body>
