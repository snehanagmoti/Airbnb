<% layout('layouts/bolierplate')%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Listing Details</h3>
            <div class="card">
                <div class="card-body">
                    <p class="card-text">
                    <h1>
                        <%= listing.title %>
                    </h1>
                    </p>
                </div>
                <img src="<%=listing.image.url %>" class="card-img-top show-img" alt="listing_image">

                <div class="card-body">
                    <p class="card-text">
                        <%= listing.description %>
                    </p>
                    <h3>Price: &#8377;<%= listing.price.toLocaleString('en-IN') %>
                    </h3>
                    <p class="card-text">Location: <%= listing.location %>, <%= listing.country %>
                    </p>
                </div>
            </div>

            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit this Listing</a>
            <br /><br />
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark">Delete this Listing</button>
                <br /> <br />
            </form>
        </div>
    </div>